{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://leak-radar.dev/schemas/ticket-webhook.payload.schema.json",
  "title": "Leak Radar Ticket Webhook Payload",
  "type": "object",
  "required": ["receiver", "status", "commonLabels", "commonAnnotations"],
  "properties": {
    "receiver": { "type": "string" },
    "status": { "type": "string", "enum": ["firing", "resolved"] },
    "commonLabels": {
      "type": "object",
      "required": ["alertname", "service", "env", "severity"],
      "properties": {
        "alertname": { "type": "string" },
        "service": { "type": "string" },
        "env": { "type": "string" },
        "severity": { "type": "string" },
        "team": { "type": "string" },
        "owner": { "type": "string" }
      },
      "additionalProperties": true
    },
    "commonAnnotations": {
      "type": "object",
      "required": ["summary", "description"],
      "properties": {
        "summary": { "type": "string" },
        "description": { "type": "string" },
        "runbook_url": { "type": "string" },
        "ticket_payload_template": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
